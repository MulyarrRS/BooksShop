@model BooksShop.Models.Book
@{
    ViewBag.Title = "Добавление книги";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Id" class="control-label">Id</label>
        <input type="text" asp-for="Id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NameBook" class="control-label">Название книги</label>
        <input type="number" asp-for="NameBook" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AutorBook" class="control-label">Автор книги</label>
        <input type="number" asp-for="AutorBook" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="YearPublication" class="control-label">Год издания</label>
        <input type="number" asp-for="YearPublication" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>